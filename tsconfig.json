{
  "compilerOptions": {
    "target": "ESNext",                // Set the target to ESNext
    "module": "CommonJS",              // Use CommonJS for module resolution
    "moduleResolution": "node",        // Enable node resolution strategy
    "outDir": "./dist",                // Output directory for compiled files
    "rootDir": "./src",                // The root directory of TypeScript files
    "esModuleInterop": true,           // Enable default import style for CommonJS modules
    "strict": true,                    // Enable strict type checking
    "skipLibCheck": true,              // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": [
    "src/**/*.ts"                      // Include all TypeScript files in the src directory
,  ],
  "exclude": [
    "node_modules"                     // Exclude node_modules
  ]
}
